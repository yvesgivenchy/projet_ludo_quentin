using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projetTeste
{
    class voiture:vehicule
    {
        //attribut
        private int nbporte;
        private bool climatisation;
        private bool transmission;
        private int capacite;

        //constructeur
        public voiture(string immatriculation, string marque, string modele, string couleur,
            int agemin, int dureeminpermis, string carburant, double tarif, int poid, int nbplace, string typedepermis,
            int nbporte,bool climatisation,bool transmission,int capacite,string typeVehicule):base(immatriculation,marque,modele,couleur,agemin,dureeminpermis,
                carburant,tarif,poid,nbplace,typedepermis,typeVehicule)
        {
            this.nbporte = nbporte;
            this.climatisation = climatisation;
            this.transmission = transmission;
            this.capacite = capacite;                        
            
        }

        //méthode
        public override string ToString()
        {
            return base.ToString() + "\n Nombre de portes : " + nbporte + "\n Climatisation : " + climatisation + "\n Transmission " + transmission
                + "\n Capacité : " + capacite;
        }





    }
}
