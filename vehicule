using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace version_1._0
{
    abstract class vehicule
    {
        //attribut
        protected string immatriculation;
        protected string marque;
        protected string modele;
        protected string couleur;
        protected int agemin;
        protected int dureeminpermis;
        protected string carburant;
        protected double tarif;        
        protected int poid;
        protected int nbplace;
        protected string typeVehicule;
        protected bool reserve;
        protected bool maintenance;
        protected string typedepermis;
        protected bool [] etatvehicule;
        protected string[] localisation;

        //constructeur

        public vehicule(string immatriculation, string marque, string modele, string couleur,
            int agemin, int dureeminpermis, string carburant,double tarif, int poid, int nbplace,string typedepermis,string typeVehicule)
        {
            this.immatriculation = immatriculation;
            this.marque = marque;
            this.modele = modele;
            this.couleur = couleur;
            this.agemin = agemin;
            this.dureeminpermis = dureeminpermis;
            this.carburant = carburant;
            this.tarif = tarif;            
            this.poid = poid;
            this.nbplace = nbplace;
            this.typedepermis = typedepermis;
            this.typeVehicule = typeVehicule;
            etatvehicule = new bool[5];
            localisation = new string[2];

        }

        //propriete
        public string Immatriculation
        {
            get
            {
                return immatriculation;
            }
        }
        public double Tarif
        {
            get
            {
                return tarif;
            }
        }

        public int Agemin
        {
            get
            {
                return agemin;
            }
        }

        public int DureeMinPermis
        {
            get
            {
                return dureeminpermis;
            }
        }

        public bool Reserve
        {
            get
            {
                return reserve;
            }
        }

        public bool [] Etatvehicule
        {
            get
            {
                return etatvehicule;
            }
        }

        public string [] Localisation
        {
            get
            {
                return localisation;
            }
        }

        public string TypedePermis
        {
            get
            {
                return typedepermis;
            }
        }

        //methode        
       
        public override string ToString()
        {
            return "Marque : " + marque + "\n Modèle : " + modele + "\n Couleur : " + couleur +"\n Type de Véhicule : "+ typeVehicule+ "\n Carburant :" + carburant +
                "\n Nombre de place " + nbplace + "\n Poid :" + poid + "\n Permis requis :" + typedepermis;
        }
    }
}

