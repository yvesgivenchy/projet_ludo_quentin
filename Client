using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projetTeste
{
    class Client
    {
        //attribut
        static int nbClient;
        private string logins;
        private string prénom;
        private string nom;
        private string dateNaissance;
        private int agepermis;
        private int dureepermis;
        private int age;
        private string adresse;
        private string email;
        private string mdps;
        private bool reservé;
        private int identifiant;

        public Client(string nom, string prénom, string dateNaissance, int agepermis, string adresse, string login, string mdp)
        {
            this.logins = login;
            this.nom = nom;
            this.prénom = prénom;
            this.adresse = adresse;
            this.dateNaissance = dateNaissance;
            this.agepermis = agepermis;
            dureepermis = CalculAgePermis();
            age = CalculAge();
            this.logins = login;
            this.mdps = mdp;
            reservé = false;
            identifiant = nbClient;
            nbClient++;

        }

        //Propriété
        public string Login
        {
            get
            {
                return logins;
            }
            set
            {
                logins = value;
            }
        }

        public string Nom
        {
            get
            {
                return nom;
            }
            set
            {
                nom = value;
            }
        }
        public string Prénom
        {
            get
            {
                return prénom;
            }
            set
            {
                prénom = value;
            }
        }
        public string Adresse
        {
            get
            {
                return adresse;
            }
            set
            {
                adresse = value;
            }
        }
        public string Mdps
        {
            get
            {
                return mdps;
            }
            set
            {
                mdps = value;
            }
        }
        public int Identifiant
        {
            get
            {
                return identifiant;
            }
        }

        public int Agepermis
        {
            get
            {
                return agepermis;
            }
        }

        public int Age
        {
            get
            {
                return age;
            }
        }

        //méthode
        public int CalculAge()
        {
            int age = 0;
            string[] tab = new string[3];
            tab = dateNaissance.Split('/');
            age = 2018 - Convert.ToInt32(tab[2]);
            return age;

        }

        public int CalculAgePermis()
        {
            int age = 0;            
            age = 2018 - agepermis;
            return age;

        }
        public bool Verifcation(string login, string mdp)// cette méthode sera utilisé afin d'idetnifier le client ainsi on simplifiera le code d' Agence
        {
            bool teste = false;
            if (logins == login && mdps == mdp)
            {
                teste = true;
            }
            return teste;

        }
        public override string ToString()
        {
            return "nom: " + nom + "\nprénom: " + prénom + "\n Adresse: " + adresse + "\n Email: " + email;
        }
     }   
}
