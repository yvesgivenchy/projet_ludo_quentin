using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace version_1._0
{
    class commande
    {
        //attribut        
        private double nbKilometrage;
        private vehicule vehicule;
        private Client client;        
        private bool autoroute;
        private string villeDepart;
        private string villeRetour;
        private string datedebut;
        private string datefin;        
        private bool alleRetour;

        
        //constructeur
        public commande(double nbKilometrage, vehicule vehicule, Client client, string datedebut, string datefin)
        {
            this.nbKilometrage = nbKilometrage;
            this.vehicule = vehicule;
            this.datedebut = datedebut;
            this.datefin = datefin;
            this.client = client;
           
        }

        //propriete
        public Client Client
        {
            get
            {
                return client;
            }
            set
            {
                client = value;
            }

        }
        public vehicule Vehicule
        {
            get
            {
                return vehicule;
            }
            set
            {
                vehicule = value;
                
            }
        }
        public bool Autoroute
        {
            get
            {
                return autoroute;
            }
            set
            {
                autoroute = value;
            }
        }

        public double Nbkilometre
        {
            get
            {
                return nbKilometrage;
            }
            set
            {
                nbKilometrage = value;
            }
        }


    }
}
